<p id="notice"><%= notice %></p>

<h1>Leader Board</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Location</th>
      <th>Score Achieved</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% if @current_user.present? %>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.location %></td>
          <td><%= 'Show score here' %></td>
          <td><%= link_to 'User Profile', user %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
