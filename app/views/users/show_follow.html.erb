
<% provide(:title, @title) %>
<div class="container1">
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
    <div id="column1">
      <h1><%= @user.name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>
      </div>
      <div id="column3">
          <div class="col-md-8">
            <h3><%= @title %></h3>
            <% if @users.any? %>
            <% end %>
        </div>
      </section>
          <table id= "following-table">
          <% @users.each do |user| %>

            <tr>
            <th><%= link_to user.name, user %></th>
            </tr>

            <tr>
            <td><%= image_tag user.image, :alt => user.name, :id => "profile-image-round" %></td>
          </tr>
          <% end %>
        </table>
        </div>
      <% end %>
    </aside>
  </div>
</div>
