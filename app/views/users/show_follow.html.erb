<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1><%= @user.name %></h1>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
      <% if @users.any? %>

          <div class="col-md-8">
            <h3><%= @title %></h3>
            <% if @users.any? %>
            <% end %>
          </div>

        <div>
          <% @users.each do |user| %>
            <%= image_tag user.image, :alt => user.name, :id => "profile-image" %>
            <%= link_to "Profile", user %>
          <% end %>
        </div>
      <% end %>
    </section>
  </aside>
</div>
