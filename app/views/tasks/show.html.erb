

<div class="showTask">
  <canvas id="celebration"></canvas>
  <% if @task.image.present? %>
   <%= image_tag @task.image, :alt => @task.name, :class => ".showImage" %>
  <% end %>
  <div class="desc">
    <p><strong><%= @task.name %></strong></p>
    <p><%= @task.description %></p>
    <div class="scoreDiv">
        <!-- <p><strong>Score:</strong><%= @task.score %></p> -->
        <%= button_to @task.score, achievement_task_path(@task), method: :put , :id=>"buttonScore" , :class=> "scoreButton",remote: true %>

    </div>
  </div>



</div>


<!-- <p>
  <strong>Category:</strong>
  <%= @task.category %>
</p> -->

<% if @current_user.present? && @current_user.admin %>
<%= link_to 'Edit', edit_task_path(@task) %>
<% end %>
