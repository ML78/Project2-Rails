

<div class = "allTasks">

  <% @tasks.each do |task| %>


    <% if task.image.present? %>
      <%= link_to task do %>
        <div class = "tasks">
         <%= image_tag(task.image, :alt => task.name,:class => "thumb") %>
        <span>
          <p><%= task.name %> - <%= task.description %></p>
        </span>
       </div>
      <% end %>
    <% end %>

  <% end %>
</div>






